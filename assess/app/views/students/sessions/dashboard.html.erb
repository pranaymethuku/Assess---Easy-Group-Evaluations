      <h5>Student Account</h5>
      <%= link_to 'edit', edit_student_registration_path, class: 'btn btn-success' %>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-md-8 col-md-offset-2 dashboard_content">
        <h3>Enrolled Classes</h3>
          <hr>
          <%= render 'sections', section: @section %>
      </div>
    </div>
  </div>
<% end %>
