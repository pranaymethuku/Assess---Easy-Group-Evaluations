  <div class="row">
    <div class="field">
      <%= f.label :number %>
      <%= f.text_field :number, autofocus: true, autocomplete: "off" %>
    </div>
  </div>

  <div class="row">
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name, autofocus: true, autocomplete: "off" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
