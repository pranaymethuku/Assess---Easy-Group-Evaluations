<%= form_with(url: create_instructor_class_path, local: true) do |f| %>
  <% if section.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(section.errors.count, "error") %> prohibited this class from being saved:</h2>

      <ul>
      <% section.errors.full_messages.each do |message| %>
